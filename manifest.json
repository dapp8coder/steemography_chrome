{
    "manifest_version": 2,
 
    "name": "Steemage",
    "version": "0.1.0",
    "description": "Image browser for steemit.com and steempeak.com blogs",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_title": "Steemage",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon64.png",
            "128": "images/icon128.png"
          },
    }
}